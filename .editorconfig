# To learn more about .editorconfig see https://aka.ms/editorconfigdocs
###############################
# Core EditorConfig Options   #
###############################
# All files
[*]
indent_style = space
indent_size = 4
# Code files
[*.{js,ts,tsx}]
indent_size = 2
insert_final_newline = true
charset = utf-8-bom
trim_trailing_whitespace = true
[*.md]
trim_trailing_whitespace = false
[*.{json,yaml}]
indent_size = 2
